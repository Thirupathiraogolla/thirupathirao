rowes=int(input('how namy rowes to wnat: '))
i=0
space=' '
while i<=rowes:
    print(space*(rowes-i),end='')
    j=1
    cnt=0
    while j<=i*2+1:
        print(j,end='')
        j+=1
    print()    
    i+=1


        
